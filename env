export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"

# Java
export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6.0/Home
export JAVA5_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.5/Home

# X11 misc
export DISPLAY=:0.0

# User-specific bin directory
export PATH="/Users/aulizko/.bin:$PATH"

# Ant
export PATH="/usr/local/ant/bin:$PATH"

# Textmate:
export LC_CTYPE=en_US.UTF-8
export EDITOR='mate -w' # -w option means "wait"

# Bash history
export HISTCONTROL=erasedups

# Merge
export HGMERGE=merge

# JSStyle
export PATH="/Users/aulizko/Documents/projects/javascript/jsstyle:$PATH"

# Homebrewed PHP 5.3
export PATH="$(brew --prefix homebrew/php/php53)/bin:$PATH"

# RVM 
source /Users/aulizko/.rvm/scripts/rvm

# NVM
[[ -s /Users/aulizko/.nvm/nvm.sh ]] && . /Users/aulizko/.nvm/nvm.sh # This loads NVM

