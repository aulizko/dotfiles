export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"

# Java
export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6.0/Home
export JAVA5_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.5/Home

# X11 misc
export DISPLAY=:0.0

# Textmate:
export LC_CTYPE=en_US.UTF-8
export EDITOR='mate -w' # -w option means "wait"

# Bash history
export HISTCONTROL=erasedups

# Merge
export HGMERGE=merge

# Homebrewed PHP 5.3
export PATH="$(brew --prefix homebrew/php/php53)/bin:$PATH"

# System-wide PhantomJS
export PHANTOMJS_BIN="/usr/local/bin/phantomjs"

# Go
export GOPATH=/Users/aulizko/Documents/projects/go