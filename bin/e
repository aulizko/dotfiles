#!/bin/zsh

# Opens Emacs
# When called with arguments, opens provided directory/file

# Checks if there's a frame open
emacsclient -n -e "(if (> (length (frame-list)) 1) 't)" 2> /dev/null | grep t &> /dev/null

if [ "$?" -eq "1" ]; then
 emacsclient -a '' -nqc "$@" &
else
 emacsclient -n -q "$@" &
fi
